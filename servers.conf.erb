server {
    server_name localhost;
    listen <%= ENV['PORT'] %>;

    <% if ENV['NGINX_PASSWORD'] %>
    auth_basic           "Protected Site User: <%= ENV['NGINX_USER'] %>";
    auth_basic_user_file "/app/config/htpasswd";
    <% end %>

    charset utf-8;
    autoindex off;
    root /app/public_html;
}